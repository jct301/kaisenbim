---
import { SOCIAL_MEDIA } from "@/constants/social-media";
import ContactsRedes from "./contacts-redes.astro";
import CopyToClipboard from "./copy-to-clipboard.svelte";
import MailIcon from "./icons/mail.astro";
---

<section id="contact" class="my-10">
  <div class="flex flex-col gap-y-5">
    <div class="flex gap-x-2 font-semibold items-center">
      <MailIcon />
      <h3 class="text-3xl text-blue-800 dark:text-blue-600 font-semibold">
        Contacto
      </h3>
    </div>
    <div class="justify-center items-center flex flex-col gap-y-5">
      <CopyToClipboard client:visible textToCopy="kaisenbim@gmail.com" />
      <ContactsRedes redes={SOCIAL_MEDIA} />
    </div>
  </div>
</section>
