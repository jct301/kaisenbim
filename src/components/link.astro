---
interface Props {
  url: string;
  label?: string;
  class?: string;
}
const { url, label, class: className } = Astro.props;
---

<a
  class={`relative block transitio hover:text-blue-800 hover:scale-105 duration-300 dark:hover:text-blue-600 active:text-blue-800 active:dark:text-blue-600 ${className}`}
  href={url}
  aria-label={label}
>
  <slot />
</a>
