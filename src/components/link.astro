---
interface Props {
	link: string;
}

const { link } = Astro.props;
---

<a
	href={link}
	class="z-10 flex items-center justify-center gap-x-2 rounded-full border border-gray-300
    bg-black px-3 py-1 hover:bg-gray-900 md:px-4 md:py-2"
	target="_blank"
	rel="noopener noreferrer"
>
	<slot />
</a>
