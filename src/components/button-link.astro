---
interface Props {
  url: string;
}

const { url } = Astro.props;
---

<a
  href={url}
  class="text-center inline-flex justify-center items-center rounded-md border border-transparent bg-blue-700 px-4 py-2 text-sm font-medium leading-4 text-white hover:bg-blue-800 focus:outline-none focus:ring-2 gap-x-2 transition duration-200 hover:scale-110"
  target={`${url.startsWith("/") ? "" : "_blank"}`}
  rel="noopener noreferrer"
>
  <slot />
</a>
