---
import { getContentServices } from "../../utils";
import SectionContainer from "../section-container.astro";
import CardType2 from "../card-type-2.astro";
import Grid from "../grid.astro";
const services = await getContentServices();
---

<SectionContainer>
	<Grid>
		{
			services.map(
				({
					data: {
						description,
						thumbnail: { src, alt },
						title,
					},
					slug,
				}) => (
					<CardType2
						description={description}
						path={slug}
						thumbnail={{
							alt,
							src,
						}}
						title={title}
					/>
				),
			)
		}
	</Grid>
</SectionContainer>
