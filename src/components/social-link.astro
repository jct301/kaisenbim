---
interface Props {
  link: string;
}

const { link } = Astro.props;
---

<a
  href={link}
  class="bg-black border border-gray-300 rounded-full flex justify-center items-center gap-x-2
    py-1 px-3 md:py-2 md:px-4 hover:bg-gray-900 z-10"
  target="_blank"
  rel="noopener noreferrer"
>
  <slot />
</a>
