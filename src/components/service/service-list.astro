---
import SectionContainer from "../section-container.astro";
import { SERVICES } from "../../constants";
import ServicePreview from "./service-preview.astro";
---

<SectionContainer id="services">
	<main class="flex flex-col items-center justify-center gap-4 py-10">
		<h4 class="text-start text-4xl font-semibold uppercase">Nuestros servicios</h4>
		<div class="grid grid-cols-1 gap-5 md:grid-cols-2 lg:grid-cols-3">
			{SERVICES.map((service) => <ServicePreview service={service} />)}
		</div>
	</main>
</SectionContainer>
