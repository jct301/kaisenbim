---
import { Image } from "astro:assets";
import InfoIcon from "./icons/info-icon.astro";
import SectionContainer from "./section-container.astro";

interface Props {
  image: string;
  content: string[];
}

const { image, content } = Astro.props;
---

<SectionContainer id="about">
  <div class="flex flex-col gap-y-6">
    <div class="flex gap-x-2 items-center font-semibold">
      <InfoIcon />
      <h3 class="text-3xl text-blue-800 dark:text-blue-600 font-semibold">
        Sobre nosotros
      </h3>
    </div>
    <article
      class="flex flex-col items-center justify-center gap-8 md:flex-row"
    >
      <div class="flex flex-col gap-y-4 w-full">
        {content.map((p) => <p>{p}</p>)}
      </div>
      <div class="flex flex-col justify-center items-center">
        <Image
          width={400}
          height={600}
          src={image}
          class="w-full"
          alt={"Imagen de presentaiÃ³n de quienes somos Kaisen BIM."}
        />
      </div>
    </article>
  </div>
</SectionContainer>
