---
import TagsList from "@/components/tags-list.astro";
import { type Content } from "@/types/content";
import { Image } from "astro:assets";
type Props = Content;

const {
  data: { thumbnail, title, description, tags },
  slug,
} = Astro.props;
---

<a
  href={slug}
  class="flex flex-col rounded-sm gap-y-4 bg-gray-200/80 dark:bg-gray-800/80 border-gray-300 dark:border-gray-600 border shadow-black/30 dark:shadow-black/20 group hover:shadow-lg hover:shadow-black/30 dark:hover:shadow-white/20 transition duration-200 group"
>
  <header class="rounded-t-sm">
    <Image
      width={600}
      height={300}
      alt={thumbnail.alt}
      src={thumbnail.src}
      class={"object-cover border border-b-gray-300/50 dark:border-d-gray-600/50  transition duration-200"}
    />
  </header>
  <footer class="px-4 py-3 flex flex-col gap-y-2">
    <h3 class="font-bold">{title}</h3>
    <p class="text-sm">{description}</p>
    <div class="flex justify-end items-center">
      <TagsList tags={tags} />
    </div>
  </footer>
</a>
