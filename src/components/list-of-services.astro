---
import { getContentSortAndLimit } from "../services/content";
import Grid from "./grid.astro";
import FolderStarIcon from "./icons/folder-star.astro";
import Item from "./item.astro";
import SectionContainer from "./section-container.astro";

interface Props {
  limit?: number;
}

const { limit } = Astro.props;

const services = await getContentSortAndLimit({
  typeContent: { type: "service" },
  limit,
});
---

<SectionContainer id="service">
  <div class="flex flex-col gap-y-6 justify-center">
    <div class="flex gap-x-2 items-center">
      <FolderStarIcon />
      <h3 class="text-3xl font-semibold text-blue-800 dark:text-blue-600">
        Services
      </h3>
    </div>
    <Grid>
      {services.map(({ data, slug }) => <Item data={data} slug={slug} />)}
    </Grid>
  </div>
</SectionContainer>
