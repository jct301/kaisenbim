---
import Link from "@/components/link.astro";
import SectionContainer from "@/components/section-container.astro";
import { LINKS } from "@/constants/links";
import { SOCIAL_MEDIA } from "@/constants/social-media";
import ContactsRedes from "./contacts-redes.astro";

const year = new Date().getFullYear();
---

<SectionContainer class="mt-20 flex flex-col gap-y-10">
  <ContactsRedes redes={SOCIAL_MEDIA} />
  <footer class="flex justify-center items-center gap-x-5">
    {
      LINKS.map(({ title, url, label }) => (
        <Link url={url} aria-label={label}>
          {title}
        </Link>
      ))
    }
  </footer>
</SectionContainer>
