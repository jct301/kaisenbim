---
import Footer from "@/components/footer.astro";
import Head from "@/components/head.astro";
import Header from "@/components/header.astro";
import Up from "@/components/up.astro";
import { SITE_CONFIG } from "@/constants/site-config";
import { SOCIAL_MEDIA } from "@/constants/social-media";
import type { Meta } from "@/types/meta";
import { ViewTransitions } from "astro:transitions";

interface Props {
  meta: Meta;
}

const {
  meta: { title, description = SITE_CONFIG.description, ogImage, articleDate },
} = Astro.props;
---

<!doctype html>
<html lang="en" class="min-h-screen">
  <head>
    <Head
      title={title}
      description={description}
      ogImage={ogImage}
      articleDate={articleDate}
    />
    <ViewTransitions />
  </head>
  <body
    class="dark:text-gray-200 text-gray-950 overflow-x-hidden dark:bg-gray-950 bg-gray-200 relative"
  >
    <Header />
    <slot />
    <Up />
    <Footer redes={SOCIAL_MEDIA} />
    <style is:global>
      :root {
        color-scheme: light dark;
      }

      html {
        font-family:
          system-ui,
          -apple-system,
          BlinkMacSystemFont,
          "Segoe UI",
          Roboto,
          Oxygen,
          Ubuntu,
          Cantarell,
          "Open Sans",
          "Helvetica Neue",
          sans-serif;
        scroll-behavior: smooth;
      }
    </style>
  </body>
</html>
