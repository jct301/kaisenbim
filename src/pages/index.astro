---
import Contact from "@/components/contact.astro";
import Hero from "@/components/hero.astro";
import ListOfProjects from "@/components/list-of-projects.astro";
import ListOfServices from "@/components/list-of-services.astro";
import data from "@/constants/index.json";
import Layout from "@/layouts/root.astro";
---

<Layout meta={{ title: "Kaisen BIM" }}>
  <Hero
    image={data.HERO_IMAGE_SRC}
    description={data.HERO_DESCRIPTION}
    title={data.HERO_TITLE}
    imageAlt={data.HERO_IMAGE_ALT}
  />

  <ListOfServices limit={6} next={true} />
  <ListOfProjects limit={6} next={true} />
  <Contact />
</Layout>
